<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codeit.com.codeit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Splash_Screen" />
        <activity android:name=".Activity.Register" />
        <activity android:name=".Activity.Login" />
        <activity android:name=".Activity.Create_Post" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".Activity.Settings" />
        <activity
            android:name=".Activity.Post_View"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Activity.Visited_Profile" />
        <activity android:name=".Activity.Comments" />
        <activity
            android:name=".Activity.Profile_Followers"
            android:label="Followers"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".Activity.Profile_Following"
            android:label="Following"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".Activity.Profile_Likes"
            android:label="Likes"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".Activity.PostLikes"
            android:label="Post Likes"
            android:theme="@style/Theme.AppCompat.Light"
            ></activity>

    </application>

</manifest>