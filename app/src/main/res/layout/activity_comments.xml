<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Comments"
    android:orientation="vertical"
    >


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comments_recycleview"
        android:layout_weight="2">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/comments_progressbar"
        android:layout_marginBottom="2dp"
        android:progressDrawable="@drawable/progressbarcolor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="comment"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:id="@+id/comment_edittext"
            android:padding="2dp"
            android:background="@drawable/empty_shape"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="comment"
            android:textSize="13dp"
            android:background="@drawable/login_bt_shape"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:id="@+id/comment_button"
            android:layout_marginBottom="3dp"
            />

    </LinearLayout>
</LinearLayout>